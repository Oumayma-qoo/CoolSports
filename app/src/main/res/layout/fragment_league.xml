<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.league.LeagueFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/leaguetext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="League Fragment"
        android:textColor="@color/black"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        />

    <Button
        android:id="@+id/go_team_btn"
        android:layout_width="586dp"
        android:layout_height="wrap_content"
        android:text="Go to Team Standings Fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/leaguetext"

        />

    <Button
        android:id="@+id/go_player_btn"
        android:layout_width="586dp"
        android:layout_height="wrap_content"
        android:text="Go to Player Standings Fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/go_team_btn"
        />



</androidx.constraintlayout.widget.ConstraintLayout>